<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Finding Bigfoot{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('a/write_solid/app') }}
    {% endblock %}
    <link rel="icon" type="image/png" href="{{ asset('images/andrii/write_solid/favicon.png') }}">
</head>
<body>
<nav class="navbar navbar-expand navbar-dark bg-dark ">
    <a class="navbar-brand" href="{{ path('homepage') }}">
        <img src="{{ asset('images/andrii/write_solid/bigfoot.png') }}" width="25" height="30"
             class="d-inline-block align-top" alt="sasquatch">
        Sasquatch Sightings
    </a>
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('andrii_write_solid_homepage') }}">Sightings</a>
        </li>
        <li class="nav-item mr-2">
            <a class="nav-link" href="{{ path('andrii_write_solid_about') }}">About</a>
        </li>
        {% if is_granted('ROLE_USER') %}
            <li class="nav-item">
                <a class="btn btn-outline-secondary nav-link" href="{{ path('andrii_write_solid_logout') }}">
                    <i class="fas fa-sign-out-alt"></i> Log Out
                </a>
            </li>
        {% else %}
            <li class="nav-item">
                <a class="btn btn-outline-info my-2 my-sm-0 nav-link" href="{{ path('andrii_write_solid_login') }}">
                    Log In
                </a>
            </li>
            <li class="nav-item ml-1">
                <a class="btn btn-outline-info my-2 my-sm-0 nav-link" href="{{ path('andrii_write_solid_signup') }}">
                    Sign up
                </a>
            </li>
        {% endif %}
    </ul>
</nav>

{# Flash messages #}
{% if app.session.flashBag.peek('success')|length > 0 %}
    <div class="alert alert-success text-center">
        {% for flash in app.session.flashBag.get('success') %}
            {{ flash|trans|raw }}
        {% endfor %}
    </div>
{% endif %}

{% if app.session.flashBag.peek('error')|length > 0 %}
    <div class="alert alert-block alert-danger">
        {% for flash in app.session.flashBag.get('error') %}
            <p class="text-center">
                {{ flash|trans|raw }}
            </p>
        {% endfor %}
    </div>
{% endif %}

<div class="container">
    <div class="row">
        <div class="col mb-5 top-nav">
            <h1 class="mt-5">Bigfoot is out there</h1>
        </div>
    </div>
    <div class="row">
        {% block body %}{% endblock %}
    </div>
    <div class="row">
        <div class="col footer-nav">
            <p class="pt-4">Made with <span class="text-danger"><3</span> by the guys and gals at
                <u>
                    <a class="text-white" href="https://symfonycasts.com">
                        SymfonyCasts
                    </a>
                </u>
            </p>
        </div>
    </div>
</div>

{% block javascripts %}
    {{ encore_entry_script_tags('a/write_solid/app') }}
{% endblock %}
</body>
</html>
